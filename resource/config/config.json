{
    "score": {
        "age_breakpoint_days": [1, 30],
        "hour_scores": [-5, -3, -0.1]
    },
    "scrape": {
        "hacker_news": {
            "homepage": "https://news.ycombinator.com/news"
        },
        "slashdot": {
            "homepage": "https://slashdot.org/"
        },
        "lobsters": {
            "feed": "https://lobste.rs/rss"
        },
        "reddit": {
            "api": "http://reddit.com/r/${subreddits}/.json",
            "subreddit_batch": 5,
            "subreddits": [
                {"name": "rust"},
                {"name": "golang"}
            ],
            "limit": 50
        }
    },
    "cron": {
        "jobs": {
            "refresh_homepage": {
                "url": "/cron/refresh",
                "interval": [1, "Minute"]
            },
            "scrape_hackernews": {
                "url": "/cron/scrape?source=HackerNews",
                "interval": [22, "Minute"]
            },
            "scrape_reddit": {
                "url": "/cron/scrape?source=Reddit",
                "interval": [22, "Minute"]
            },
            "scrape_lobsters": {
                "url": "/cron/scrape?source=Lobsters",
                "interval": [22, "Minute"]
            },
            "scrape_slashdot": {
                "url": "/cron/scrape?source=Slashdot",
                "interval": [22, "Minute"]
            }
        }
    }
}
